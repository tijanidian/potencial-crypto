<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadLine1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/headline_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadLine2" parent="HeadLine1">
        <item name="android:textSize">@dimen/headline_2</item>
    </style>

    <style name="Subtitle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/subtitle_1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Subtitle2" parent="Subtitle1">
        <item name="android:textSize">@dimen/subtitle_2</item>
    </style>

    <style name="Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/body_1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Caption0">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/caption_0</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Caption1" parent="Caption0">
        <item name="android:textSize">@dimen/caption_1</item>
    </style>

    <style name="Caption2" parent="Caption1">
        <item name="android:textSize">@dimen/caption_2</item>
    </style>

    <style name="LineSection">
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="CustomChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeColor">@color/primaryDarkColor</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/primaryColor</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="CustomChipItem" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeColor">@color/primaryDarkColor</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/primaryColor</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:progressTint">@color/primaryColor</item>
    </style>
</resources>